FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 3000

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["hello-world/app/app.fsproj", "app/"]
RUN dotnet restore "app/app.fsproj"
COPY ["hello-world/app/OrderController.fs", "app/"]
COPY ["hello-world/app/Program.fs", "app/"]
WORKDIR "/src/app"
RUN dotnet build "app.fsproj"  -c Release -p:ExtraDefineConstants=hello_kubernetes -o /app/build

FROM build AS publish
RUN dotnet publish "app.fsproj" -c Release -p:ExtraDefineConstants=hello_kubernetes -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "app.dll"]